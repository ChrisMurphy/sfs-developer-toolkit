			"description": "Property description to be completed",
			"items": {
				$ref: "#/definitions/income-expenditure-item"
			}
		},
		"carers-allowance": {
			"type": "array",
			"title": "Carer's Allowance",
			"description": "Property description to be completed",
			"items": {
				$ref: "#/definitions/income-expenditure-item"
			}
		},
		"local-housing-allowance-housing-benefit": {	
			"type": "array",
			"title": "Local Housing Allowance / Housing Benefit",
			"description": "Property description to be completed",
			"items": {
				$ref: "#/definitions/income-expenditure-item"
			}
		},
		"council-tax-support": {	
